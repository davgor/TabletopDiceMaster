<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceMaster.Views.FavoritePage"
             BackgroundColor="#181619"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView ItemsSource="{Binding FavoritesLog}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame OutlineColor="black" 
                                   BackgroundColor="#6D7684"
                                   Padding="20">
                                <Expander>
                                    <Expander.Header>
                                        <StackLayout>
                                        <Label Text="{Binding Name, StringFormat='{0}'}"
                                               VerticalOptions="CenterAndExpand" 
                                               HorizontalOptions="CenterAndExpand"
                                               FontAttributes="Bold"
                                               FontSize="Large"
                                               TextColor="#20232F"/>
                                        </StackLayout>
                                    </Expander.Header>
                                    <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                        <Button Clicked="rowClick"
                                            ClassId="{Binding Name}"
                                            Text="Re Roll"
                                            BackgroundColor="#20232F"
                                            Grid.Column="0"
                                            TextColor="#90829E"/>
                                        <Button Clicked="deleteFavorite"
                                            ClassId="{Binding Name}"
                                            Text="Delete"
                                            BackgroundColor="#20232F"
                                            Grid.Column="1"
                                            TextColor="#90829E"/>
                                    </Grid>
                                </Expander>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <StackLayout HorizontalOptions="CenterAndExpand"
                             VerticalOptions="CenterAndExpand">
                            <Label Text="No favorites found"
                                   Margin="10,25,10,10"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center" 
                                   TextColor="#90829E"/>
                            <Label Text="Go find a favorite roll!"
                                   FontAttributes="Italic"
                                   FontSize="12"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center" 
                                   TextColor="#90829E"/>
                        </StackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>